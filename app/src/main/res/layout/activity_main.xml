<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro Turmas"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btCadastroAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Aluno"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btCadastroProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Professor"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btCadastroDisciplina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Disciplina"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btCadastroTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Turma"
        android:layout_margin="10dp"
        />
</LinearLayout>